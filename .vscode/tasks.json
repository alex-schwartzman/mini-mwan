{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build mini-mwan package",
			"type": "shell",
			"command": "make",
			"args": [
				"package/mini-mwan/compile",
				"V=s"
			],
			"options": {
				"cwd": "/builder"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "Clean mini-mwan package",
			"type": "shell",
			"command": "make",
			"args": [
				"package/mini-mwan/clean",
				"V=s"
			],
			"options": {
				"cwd": "/builder"
			},
			"problemMatcher": []
		},
		{
			"label": "Copy built packages to bin/",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"mkdir -p /builder/bin_output && find /builder/bin/packages -name 'mini-mwan*.ipk' -exec cp -v {} /builder/bin_output/ \\;"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"label": "Build and copy packages",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Build mini-mwan package",
				"Copy built packages to bin/"
			],
			"problemMatcher": []
		}
	]
}